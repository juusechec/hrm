{% extends 'hrm.html.twig' %}

{% block title %}Listado de Otro Si{% endblock %}

{% block body %}
    <h1>Listado de Otro Si</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha Inicio</th>
                <th>Accion</th>
            </tr>
        </thead>
        <tbody>
        {% for otrosi in otrosis %}
            <tr>
                <td>{{ otrosi.id }}</td>
                <td>{{ otrosi.fechaInicio ? otrosi.fechaInicio|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('otrosi_show', {'id': otrosi.id}) }}">Ver</a>
                    <a href="{{ path('otrosi_edit', {'id': otrosi.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">!Ups! no encontramos nada</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('otrosi_new') }}">Create new</a>
{% endblock %}
