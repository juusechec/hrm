{% extends 'hrm.html.twig' %}

{% block title %}Cuenta Bancaria{% endblock %}

{% block body %}
    <h1>Cuenta Bancaria </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero</th>
                <th>Tipo</th>
                <th>Principal</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for cuenta_bancarium in cuenta_bancarias %}
            <tr>
                <td>{{ cuenta_bancarium.id }}</td>
                <td>{{ cuenta_bancarium.numero }}</td>
                <td>{{ cuenta_bancarium.tipo }}</td>
                <td>{{ cuenta_bancarium.principal ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('cuenta_bancaria_show', {'id': cuenta_bancarium.id}) }}">Ver</a>
                    <a href="{{ path('cuenta_bancaria_edit', {'id': cuenta_bancarium.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Â¡Oops! no encontramos nada</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('cuenta_bancaria_new') }}">Nuevo</a>
{% endblock %}
