{% extends 'hrm.html.twig' %}

{% block title %}Persona index{% endblock %}

{% block body %}
    <h1>Persona index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>PrimerNombre</th>
                <th>OtroNombre</th>
                <th>PrimerApellido</th>
                <th>SegundoApellido</th>
                <th>FechaNacimiento</th>
                <th>LugarNacimiento</th>
                <th>TipoDocumento</th>
                <th>NumeroDocumento</th>
                <th>FechaExpedicionDocumento</th>
                <th>LugarExpedicionDocumento</th>
                <th>TipoSangre</th>
                <th>TelefonoFijo</th>
                <th>TelefonoMovil1</th>
                <th>TelefonoMovil2</th>
                <th>CorreoElectronico1</th>
                <th>CorreoElectronico2</th>
                <th>Activo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for persona in personas %}
            <tr>
                <td>{{ persona.id }}</td>
                <td>{{ persona.primerNombre }}</td>
                <td>{{ persona.otroNombre }}</td>
                <td>{{ persona.primerApellido }}</td>
                <td>{{ persona.segundoApellido }}</td>
                <td>{{ persona.fechaNacimiento ? persona.fechaNacimiento|date('Y-m-d') : '' }}</td>
                <td>{{ persona.lugarNacimiento }}</td>
                <td>{{ persona.tipoDocumento }}</td>
                <td>{{ persona.numeroDocumento }}</td>
                <td>{{ persona.fechaExpedicionDocumento ? persona.fechaExpedicionDocumento|date('Y-m-d') : '' }}</td>
                <td>{{ persona.lugarExpedicionDocumento }}</td>
                <td>{{ persona.tipoSangre }}</td>
                <td>{{ persona.telefonoFijo }}</td>
                <td>{{ persona.telefonoMovil1 }}</td>
                <td>{{ persona.telefonoMovil2 }}</td>
                <td>{{ persona.correoElectronico1 }}</td>
                <td>{{ persona.correoElectronico2 }}</td>
                <td>{{ persona.activo ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('persona_show', {'id': persona.id}) }}">show</a>
                    <a href="{{ path('persona_edit', {'id': persona.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="18">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('persona_new') }}">Create new</a>
{% endblock %}
