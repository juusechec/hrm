{% extends 'hrm.html.twig' %}

{% block title %}Persona{% endblock %}

{% block body %}
    <h1>Persona</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ persona.id }}</td>
            </tr>
            <tr>
                <th>Primer Nombre</th>
                <td>{{ persona.primerNombre }}</td>
            </tr>
            <tr>
                <th>Otro Nombre</th>
                <td>{{ persona.otroNombre }}</td>
            </tr>
            <tr>
                <th>Primer Apellido</th>
                <td>{{ persona.primerApellido }}</td>
            </tr>
            <tr>
                <th>Segundo Apellido</th>
                <td>{{ persona.segundoApellido }}</td>
            </tr>
            <tr>
                <th>Fecha Nacimiento</th>
                <td>{{ persona.fechaNacimiento ? persona.fechaNacimiento|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Edad</th>
                <td>{{ ('now'|date('Y') - persona.fechaNacimiento|date('Y') - 1) + ('now'|date('2010-m-d')|date('U') - persona.fechaNacimiento|date('2010-m-d')|date('U') >= 0 ? 1 : 0) }}</td>
            </tr>
            <tr>
                <th>Lugar Nacimiento</th>
                <td>{{ persona.lugarNacimiento }}</td>
            </tr>
            <tr>
                <th>Tipo Documento</th>
                <td>{{ persona.tipoDocumento }}</td>
            </tr>
            <tr>
                <th>Numero Documento</th>
                <td>{{ persona.numeroDocumento }}</td>
            </tr>
            <tr>
                <th>Fecha Expedicion Documento</th>
                <td>{{ persona.fechaExpedicionDocumento ? persona.fechaExpedicionDocumento|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Lugar Expedicion Documento</th>
                <td>{{ persona.lugarExpedicionDocumento }}</td>
            </tr>
            <tr>
                <th>Tipo Sangre</th>
                <td>{{ persona.tipoSangre }}</td>
            </tr>
            <tr>
                <th>Telefono Fijo</th>
                <td>{{ persona.telefonoFijo }}</td>
            </tr>
            <tr>
                <th>Telefono Movil 1</th>
                <td>{{ persona.telefonoMovil1 }}</td>
            </tr>
            <tr>
                <th>Telefono Movil 2</th>
                <td>{{ persona.telefonoMovil2 }}</td>
            </tr>
            <tr>
                <th>Correo Electronico 1</th>
                <td>{{ persona.correoElectronico1 }}</td>
            </tr>
            <tr>
                <th>Correo Electronico 2</th>
                <td>{{ persona.correoElectronico2 }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{{ persona.activo ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('persona_index') }}">Volver a la Lista</a>

    <a href="{{ path('persona_edit', {'id': persona.id}) }}">Editar</a>

    {{ include('persona/_delete_form.html.twig') }}
{% endblock %}
