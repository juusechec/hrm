{% extends 'hrm.html.twig' %}

{% block title %}Relacion Persona Entidad {% endblock %}

{% block body %}
    <h1>Relacion Persona Entidad</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha de Inicio</th>
                <th>Fecha Finaliación</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for relacion_persona_entidad in relacion_persona_entidads %}
            <tr>
                <td>{{ relacion_persona_entidad.id }}</td>
                <td>{{ relacion_persona_entidad.fechaInicio ? relacion_persona_entidad.fechaInicio|date('d-m-Y') : '' }}</td>
                <td>{{ relacion_persona_entidad.fechaFin ? relacion_persona_entidad.fechaFin|date('d-m-Y') : '' }}</td>
                <td>
                    <a href="{{ path('relacion_persona_entidad_show', {'id': relacion_persona_entidad.id}) }}">Ver</a>
                    <a href="{{ path('relacion_persona_entidad_edit', {'id': relacion_persona_entidad.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">¡Oops! no encontramos nada</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('relacion_persona_entidad_new') }}">Nuevo</a>
{% endblock %}
