{% extends 'hrm.html.twig' %}

{% block title %}Registro de Vacuna {% endblock %}

{% block body %}
    <h1>Registro de Vacuna</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fechade la Dosis</th>
                <th>Fecha de Vencimiento de la Dosis</th>
                <th>Observacion</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for registro_vacuna in registro_vacunas %}
            <tr>
                <td>{{ registro_vacuna.id }}</td>
                <td>{{ registro_vacuna.fechaDosis ? registro_vacuna.fechaDosis|date('d-m-Y') : '' }}</td>
                <td>{{ registro_vacuna.fechaVencimientoDosis }}</td>
                <td>{{ registro_vacuna.observacion }}</td>
                <td>
                    <a href="{{ path('registro_vacuna_show', {'id': registro_vacuna.id}) }}">Ver</a>
                    <a href="{{ path('registro_vacuna_edit', {'id': registro_vacuna.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Â¡Oops! no encontramos nada</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('registro_vacuna_new') }}">Nuevo</a>
{% endblock %}
