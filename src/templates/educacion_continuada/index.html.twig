{% extends 'hrm.html.twig' %}

{% block title %}Educacion Continuada {% endblock %}

{% block body %}
    <h1>Educacion Continuada</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha Terminacion</th>
                <th>Fecha Vencimiento</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for educacion_continuada in educacion_continuadas %}
            <tr>
                <td>{{ educacion_continuada.id }}</td>
                <td>{{ educacion_continuada.fechaTerminacion ? educacion_continuada.fechaTerminacion|date('Y-m-d') : '' }}</td>
                <td>{{ educacion_continuada.fechaVencimiento ? educacion_continuada.fechaVencimiento|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('educacion_continuada_show', {'id': educacion_continuada.id}) }}">Ver</a>
                    <a href="{{ path('educacion_continuada_edit', {'id': educacion_continuada.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">!Ups! no encontramos nada</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('educacion_continuada_new') }}">Nuevo</a>
{% endblock %}
