{% extends 'hrm.html.twig' %}

{% block title %}Educacion Continuada{% endblock %}

{% block body %}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Educacion Continuada
                </h2>
            </div>
            <div class="body table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Fecha Terminacion</th>
                            <th>Fecha Vencimiento</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for educacion_continuada in educacion_continuadas %}
                        <tr>
                            <td>{{ educacion_continuada.id }}</td>
                            <td>{{ educacion_continuada.fechaTerminacion ? educacion_continuada.fechaTerminacion|date('d-m-Y') : '' }}</td>
                            <td>{{ educacion_continuada.fechaVencimiento ? educacion_continuada.fechaVencimiento|date('d-m-Y') : '' }}</td>
                            <td>
                                <a href="{{ path('educacion_continuada_show', {'id': educacion_continuada.id}) }}">Ver</a>
                                <a href="{{ path('educacion_continuada_edit', {'id': educacion_continuada.id}) }}">Editar</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">Â¡Oops! no encontramos nada</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="row clearfix">
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <a href="{{ path('educacion_continuada_new') }}" class="btn btn-block btn-lg btn-primary waves-effect">Crear Nuevo</a>
    </div>
</div>
{% endblock %}
