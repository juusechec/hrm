{% extends 'hrm.html.twig' %}

{% block title %}Tipo de Vivienda{% endblock %}

{% block body %}
    <h1>Tipo de Vivienda</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tipo_vivienda.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ tipo_vivienda.nombre }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ tipo_vivienda.descripcion }}</td>
            </tr>
            <tr>
                <th>Abreviación</th>
                <td>{{ tipo_vivienda.abreviacion }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{{ tipo_vivienda.activo ? 'Sí' : 'No' }}</td>
            </tr>
            <tr>
                <th>Orden</th>
                <td>{{ tipo_vivienda.orden }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tipo_vivienda_index') }}">Volver a la lista</a>

    <a href="{{ path('tipo_vivienda_edit', {'id': tipo_vivienda.id}) }}">Editar</a>

    {{ include('tipo_vivienda/_delete_form.html.twig') }}
{% endblock %}
