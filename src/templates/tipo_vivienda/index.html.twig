{% extends 'hrm.html.twig' %}

{% block title %}Tipo de Vivienda {% endblock %}

{% block body %}
    <h1>Tipo de Vivienda</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Abreviación</th>
                <th>Activo</th>
                <th>Orden</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for tipo_vivienda in tipo_viviendas %}
            <tr>
                <td>{{ tipo_vivienda.id }}</td>
                <td>{{ tipo_vivienda.nombre }}</td>
                <td>{{ tipo_vivienda.descripcion }}</td>
                <td>{{ tipo_vivienda.abreviacion }}</td>
                <td>{{ tipo_vivienda.activo ? 'Yes' : 'No' }}</td>
                <td>{{ tipo_vivienda.orden }}</td>
                <td>
                    <a href="{{ path('tipo_vivienda_show', {'id': tipo_vivienda.id}) }}">Ver</a>
                    <a href="{{ path('tipo_vivienda_edit', {'id': tipo_vivienda.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">!Ups! no encontramos nada</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tipo_vivienda_new') }}">Nuevo</a>
{% endblock %}
