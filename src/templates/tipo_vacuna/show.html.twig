{% extends 'hrm.html.twig' %}

{% block title %}Tipo de Vacuna{% endblock %}

{% block body %}
    <h1>Tipo de Vacuna</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tipo_vacuna.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ tipo_vacuna.nombre }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ tipo_vacuna.descripcion }}</td>
            </tr>
            <tr>
                <th>Patologia</th>
                <td>{{ tipo_vacuna.patologia }}</td>
            </tr>
            <tr>
                <th>Abreviación</th>
                <td>{{ tipo_vacuna.abreviacion }}</td>
            </tr>
            <tr>
                <th>Orden</th>
                <td>{{ tipo_vacuna.orden }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{{ tipo_vacuna.activo ? 'Sí' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tipo_vacuna_index') }}">Volver a la lista</a>

    <a href="{{ path('tipo_vacuna_edit', {'id': tipo_vacuna.id}) }}">Editar</a>

    {{ include('tipo_vacuna/_delete_form.html.twig') }}
{% endblock %}
