{% extends 'hrm.html.twig' %}

{% block title %}Tipo de Contrato {% endblock %}

{% block body %}
    <h1>Tipo de Contrato</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Abreviación</th>
                <th>Orden</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for tipo_contrato in tipo_contratos %}
            <tr>
                <td>{{ tipo_contrato.id }}</td>
                <td>{{ tipo_contrato.nombre }}</td>
                <td>{{ tipo_contrato.descripcion }}</td>
                <td>{{ tipo_contrato.abreviacion }}</td>
                <td>{{ tipo_contrato.orden }}</td>
                <td>{{ tipo_contrato.activo ? 'Sí' : 'No' }}</td>
                <td>
                    <a href="{{ path('tipo_contrato_show', {'id': tipo_contrato.id}) }}">Ver</a>
                    <a href="{{ path('tipo_contrato_edit', {'id': tipo_contrato.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">¡Oops! no encontramos nada</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tipo_contrato_new') }}">Nuevo</a>
{% endblock %}
