{% extends 'hrm.html.twig' %}

{% block title %}Tipo de Contrato{% endblock %}

{% block body %}
    <h1>Tipo de Contrato</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tipo_contrato.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ tipo_contrato.nombre }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ tipo_contrato.descripcion }}</td>
            </tr>
            <tr>
                <th>Abreviación</th>
                <td>{{ tipo_contrato.abreviacion }}</td>
            </tr>
            <tr>
                <th>Orden</th>
                <td>{{ tipo_contrato.orden }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{{ tipo_contrato.activo ? 'Sí' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tipo_contrato_index') }}">Volver a la lista</a>

    <a href="{{ path('tipo_contrato_edit', {'id': tipo_contrato.id}) }}">Editar</a>

    {{ include('tipo_contrato/_delete_form.html.twig') }}
{% endblock %}
