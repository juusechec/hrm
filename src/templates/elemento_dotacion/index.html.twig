{% extends 'hrm.html.twig' %}

{% block title %}Elemento de Dotacion {% endblock %}

{% block body %}
    <h1>Elemento de Dotacion</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Abreviación</th>
                <th>Orden</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for elemento_dotacion in elemento_dotacions %}
            <tr>
                <td>{{ elemento_dotacion.id }}</td>
                <td>{{ elemento_dotacion.nombre }}</td>
                <td>{{ elemento_dotacion.descripcion }}</td>
                <td>{{ elemento_dotacion.abreviacion }}</td>
                <td>{{ elemento_dotacion.orden }}</td>
                <td>{{ elemento_dotacion.activo ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('elemento_dotacion_show', {'id': elemento_dotacion.id}) }}">Ver</a>
                    <a href="{{ path('elemento_dotacion_edit', {'id': elemento_dotacion.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">!Ups! no encontramos nada</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('elemento_dotacion_new') }}">Nuevo</a>
{% endblock %}
