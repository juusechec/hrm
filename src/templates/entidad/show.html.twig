{% extends 'hrm.html.twig' %}

{% block title %}Entidad{% endblock %}

{% block body %}
    <h1>Entidad</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entidad.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entidad.nombre }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ entidad.descripcion }}</td>
            </tr>
            <tr>
                <th>Abreviación</th>
                <td>{{ entidad.abreviacion }}</td>
            </tr>
            <tr>
                <th>Orden</th>
                <td>{{ entidad.orden }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{{ entidad.activo ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('entidad_index') }}">Volver a la Lista</a>

    <a href="{{ path('entidad_edit', {'id': entidad.id}) }}">Editar</a>

    {{ include('entidad/_delete_form.html.twig') }}
{% endblock %}
