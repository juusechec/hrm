{% extends 'base.html.twig' %}

{% block title %}Cargo{% endblock %}

{% block body %}
    <h1>Cargo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cargo.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ cargo.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ cargo.descripcion }}</td>
            </tr>
            <tr>
                <th>Abreviacion</th>
                <td>{{ cargo.abreviacion }}</td>
            </tr>
            <tr>
                <th>Orden</th>
                <td>{{ cargo.orden }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{{ cargo.activo ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('cargo_index') }}">back to list</a>

    <a href="{{ path('cargo_edit', {'id': cargo.id}) }}">edit</a>

    {{ include('cargo/_delete_form.html.twig') }}
{% endblock %}
