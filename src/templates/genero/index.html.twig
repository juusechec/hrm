{% extends 'hrm.html.twig' %}

{% block title %}Genero {% endblock %}

{% block body %}
    <h1>Genero</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Abreviación</th>
                <th>Orden</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for genero in generos %}
            <tr>
                <td>{{ genero.id }}</td>
                <td>{{ genero.nombre }}</td>
                <td>{{ genero.descripcion }}</td>
                <td>{{ genero.abreviacion }}</td>
                <td>{{ genero.orden }}</td>
                <td>{{ genero.activo ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('genero_show', {'id': genero.id}) }}">Ver</a>
                    <a href="{{ path('genero_edit', {'id': genero.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">!Ups! no encontramos nada</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('genero_new') }}">Nuevo</a>
{% endblock %}
