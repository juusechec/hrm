{% extends 'hrm.html.twig' %}

{% block title %}Genero{% endblock %}

{% block body %}
    <h1>Genero</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ genero.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ genero.nombre }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ genero.descripcion }}</td>
            </tr>
            <tr>
                <th>Abreviación</th>
                <td>{{ genero.abreviacion }}</td>
            </tr>
            <tr>
                <th>Orden</th>
                <td>{{ genero.orden }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{{ genero.activo ? 'Sí' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('genero_index') }}">Volver a la lista</a>

    <a href="{{ path('genero_edit', {'id': genero.id}) }}">Editar</a>

    {{ include('genero/_delete_form.html.twig') }}
{% endblock %}
