{% extends 'hrm.html.twig' %}
{#{% form_theme form 'form/fields.html.twig' %}#}
{% use 'empleado/scripts.html.twig' %}

{% block title %}Nuevo Empleado{% endblock %}

{% block body %}
<!-- Tabs With Icon Title -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Nuevo Empleado
                </h2>
            </div>
            <div class="body">
                <!-- Nav tabs -->
                <ul id="empleadoTabs" class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active">
                        <a href="#home_with_icon_title" data-toggle="tab">
                            <i class="material-icons">face</i> Persona
                        </a>
                    </li>
                    <li role="presentation">
                        <a href="#profile_with_icon_title" data-toggle="tab">
                            <i class="material-icons">face</i> PROFILE
                        </a>
                    </li>
                    <li role="presentation">
                        <a href="#messages_with_icon_title" data-toggle="tab">
                            <i class="material-icons">email</i> MESSAGES
                        </a>
                    </li>
                    <li role="presentation">
                        <a href="#settings_with_icon_title" data-toggle="tab">
                            <i class="material-icons">settings</i> SETTINGS
                        </a>
                    </li>
                </ul>

                <!-- Tab panes -->
                {{ form_start(form) }}
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane fade in active" id="home_with_icon_title">
                        {{ include('empleado/_persona_form.html.twig') }}
                    </div>
                    <div role="tabpanel" class="tab-pane fade" id="profile_with_icon_title">
                        {{ include('empleado/_familiares_form.html.twig') }}
                    </div>
                    <div role="tabpanel" class="tab-pane fade" id="messages_with_icon_title">
                    </div>
                    <div role="tabpanel" class="tab-pane fade" id="settings_with_icon_title">
                    </div>
                </div>
                {{ form_end(form, {'render_rest': false}) }}
                <div class="row clearfix">
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <button class="btn btn-block btn-lg btn-primary waves-effect">{{ button_label|default('Siguiente') }}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- #END# Tabs With Icon Title -->

<div class="row clearfix">
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <a href="{{ path('empleado_index') }}" class="btn btn-block btn-lg btn-success waves-effect">Volver a la Lista</a>
    </div>
</div>
<br>
{% endblock %}
