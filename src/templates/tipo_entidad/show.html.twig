{% extends 'hrm.html.twig' %}

{% block title %}Tipo de Entidad{% endblock %}

{% block body %}
    <h1>Tipo de Entidad</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tipo_entidad.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ tipo_entidad.nombre }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ tipo_entidad.descripcion }}</td>
            </tr>
            <tr>
                <th>Abreviación</th>
                <td>{{ tipo_entidad.abreviacion }}</td>
            </tr>
            <tr>
                <th>Orden</th>
                <td>{{ tipo_entidad.orden }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{{ tipo_entidad.activo ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tipo_entidad_index') }}">Volver a la Lista</a>

    <a href="{{ path('tipo_entidad_edit', {'id': tipo_entidad.id}) }}">Editar</a>

    {{ include('tipo_entidad/_delete_form.html.twig') }}
{% endblock %}
