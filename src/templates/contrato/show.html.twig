{% extends 'hrm.html.twig' %}

{% block title %}Contrato{% endblock %}

{% block body %}
    <h1>Contrato</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contrato.id }}</td>
            </tr>
            <tr>
                <th>Objeto</th>
                <td>{{ contrato.objeto }}</td>
            </tr>
            <tr>
                <th>Obra O Labor</th>
                <td>{{ contrato.obraOLabor }}</td>
            </tr>
            <tr>
                <th>Fecha Inicio</th>
                <td>{{ contrato.fechaInicio ? contrato.fechaInicio|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Fecha Fin</th>
                <td>{{ contrato.fechaFin ? contrato.fechaFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Salario Base</th>
                <td>{{ contrato.salarioBase }}</td>
            </tr>
            <tr>
                <th>SalarioAuxilio</th>
                <td>{{ contrato.salarioAuxilio }}</td>
            </tr>
            <tr>
                <th>Dias del Periodo Prueba</th>
                <td>{{ contrato.diasPeriodoPrueba }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('contrato_index') }}">Volver a la Lista</a>

    <a href="{{ path('contrato_edit', {'id': contrato.id}) }}">Editar</a>

    {{ include('contrato/_delete_form.html.twig') }}
{% endblock %}
