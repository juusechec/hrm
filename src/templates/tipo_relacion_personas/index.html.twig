{% extends 'hrm.html.twig' %}

{% block title %}TipoRelacion Personas {% endblock %}

{% block body %}
    <h1>TipoRelacionPersonas</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Abreviación</th>
                <th>Orden</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for tipo_relacion_persona in tipo_relacion_personas %}
            <tr>
                <td>{{ tipo_relacion_persona.id }}</td>
                <td>{{ tipo_relacion_persona.nombre }}</td>
                <td>{{ tipo_relacion_persona.descripcion }}</td>
                <td>{{ tipo_relacion_persona.abreviacion }}</td>
                <td>{{ tipo_relacion_persona.orden }}</td>
                <td>{{ tipo_relacion_persona.activo ? 'Sí' : 'No' }}</td>
                <td>
                    <a href="{{ path('tipo_relacion_personas_show', {'id': tipo_relacion_persona.id}) }}">Ver</a>
                    <a href="{{ path('tipo_relacion_personas_edit', {'id': tipo_relacion_persona.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">¡Oops! no encontramos nada</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tipo_relacion_personas_new') }}">Crear nuevo</a>
{% endblock %}
