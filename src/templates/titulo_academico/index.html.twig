{% extends 'hrm.html.twig' %}

{% block title %}Título Académico{% endblock %}

{% block body %}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Título Académico
                    <small>Registre todos los títulos posibles</small>
                </h2>
            </div>
            <div class="body table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Codigo Snies</th>
                            <th>Modalidad Academica</th>
                            <th>Descripción</th>
                            <th>Abreviación</th>
                            <th>Orden</th>
                            <th>Activo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for titulo_academico in titulo_academicos %}           
                        <tr>
                            <td>{{ titulo_academico.id }}</td>
                            <td>{{ titulo_academico.nombre }}</td>
                            <td>{{ titulo_academico.codigoSnies }}</td>
                            <td>{{ titulo_academico.modalidadAcademica }}</td>
                            <td>{{ titulo_academico.descripcion }}</td>
                            <td>{{ titulo_academico.abreviacion }}</td>
                            <td>{{ titulo_academico.orden }}</td>
                            <td>{{ titulo_academico.activo ? 'Sí' : 'No' }}</td>
                            <td>
                                <a href="{{ path('titulo_academico_show', {'id': titulo_academico.id}) }}" title="Ver" class="btn bg-light-green btn-circle waves-effect waves-circle waves-float">
                                    <i class="material-icons">view_headline</i>
                                </a>
                                <a href="{{ path('titulo_academico_edit', {'id': titulo_academico.id}) }}" title="Editar" class="btn bg-red btn-circle waves-effect waves-circle waves-float">
                                    <i class="material-icons">mode_edit</i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="18">!Oops! no encontramos nada que mostrarte</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="row clearfix">
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <a href="{{ path('titulo_academico_new') }}" class="btn btn-block btn-lg btn-primary waves-effect">Crear Nuevo</a>
    </div>
</div>
{% endblock %}
