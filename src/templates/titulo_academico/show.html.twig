{% extends 'hrm.html.twig' %}

{% block title %}Título Académico{% endblock %}

{% block body %}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>Título Académico</h2>
            </div>
            <div class="body table-responsive">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ titulo_academico.id }}</td>
                        </tr>
                        <tr>
                            <th>Nombre</th>
                            <td>{{ titulo_academico.nombre }}</td>
                        </tr>
                        <tr>
                            <th>CodigoSnies</th>
                            <td>{{ titulo_academico.codigoSnies }}</td>
                        </tr>
                        <tr>
                            <th>ModalidadAcademica</th>
                            <td>{{ titulo_academico.modalidadAcademica }}</td>
                        </tr>
                        <tr>
                            <th>Descripción</th>
                            <td>{{ titulo_academico.descripcion }}</td>
                        </tr>
                        <tr>
                            <th>Abreviación</th>
                            <td>{{ titulo_academico.abreviacion }}</td>
                        </tr>
                        <tr>
                            <th>Orden</th>
                            <td>{{ titulo_academico.orden }}</td>
                        </tr>
                        <tr>
                            <th>Activo</th>
                            <td>{{ titulo_academico.activo ? 'Sí' : 'No' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="row clearfix">
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <a href="{{ path('titulo_academico_index') }}" class="btn btn-block btn-lg btn-success waves-effect">Volver a la lista</a>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <a href="{{ path('titulo_academico_edit', {'id': titulo_academico.id}) }}" class="btn btn-block btn-lg btn-primary waves-effect">Editar</a>
    </div>
</div>

{{ include('titulo_academico/_delete_form.html.twig') }}
<br>
{% endblock %}
