{% extends 'hrm.html.twig' %}

{% block title %}Estado Civil{% endblock %}

{% block body %}
    <h1>Estado Civil</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Abreviación</th>
                <th>Orden</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for estado_civil in estado_civils %}
            <tr>
                <td>{{ estado_civil.id }}</td>
                <td>{{ estado_civil.nombre }}</td>
                <td>{{ estado_civil.descripcion }}</td>
                <td>{{ estado_civil.abreviacion }}</td>
                <td>{{ estado_civil.orden }}</td>
                <td>{{ estado_civil.activo ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('estado_civil_show', {'id': estado_civil.id}) }}">Ver</a>
                    <a href="{{ path('estado_civil_edit', {'id': estado_civil.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">¡Oops! no encontramos nada</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('estado_civil_new') }}">Nuevo</a>
{% endblock %}
