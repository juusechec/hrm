{% extends 'hrm.html.twig' %}

{% block title %}Estado Civil{% endblock %}

{% block body %}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>Estado Civil</h2>
            </div>
            <div class="body table-responsive">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th></th>
                            <td>{{ estado_civil.id }}</td>
                        </tr>
                        <tr>
                            <th>Nombre</th>
                            <td>{{ estado_civil.nombre }}</td>
                        </tr>
                        <tr>
                            <th>Descripción</th>
                            <td>{{ estado_civil.descripcion }}</td>
                        </tr>
                        <tr>
                            <th>Abreviación</th>
                            <td>{{ estado_civil.abreviacion }}</td>
                        </tr>
                        <tr>
                            <th>Orden</th>
                            <td>{{ estado_civil.orden }}</td>
                        </tr>
                        <tr>
                            <th>Activo</th>
                            <td>{{ estado_civil.activo ? 'Sí' : 'No' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="row clearfix">
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <a href="{{ path('estado_civil_index') }}" class="btn btn-block btn-lg btn-success waves-effect">Volver a la lista</a>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <a href="{{ path('estado_civil_edit', {'id': estado_civil.id}) }}" class="btn btn-block btn-lg btn-primary waves-effect">Editar</a>
    </div>
</div>

{{ include('estado_civil/_delete_form.html.twig') }}
<br>
{% endblock %}
