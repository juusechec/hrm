<form method="post" action="{{ path('estado_civil_delete', {'id': estado_civil.id}) }}" onsubmit="return confirm('¿Está seguro que desea eliminar este ítem?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ estado_civil.id) }}">
    <button class="btn">Borrar</button>
</form>
